QLineEdit {
    background-color: #1c1c1c;  /* Dark Gray Background */
    color: #ff4c4c;  /* Red Text Color */
    border: 2px solid #333;  /* Darker Gray Border */
    min-width: 300px;
    min-height: 30px;
    border-radius: 8px;  /* Rounded Corners */
    padding: 5px;  /* Inner Padding */
    font-size: 18px;  /* Adjusted Text Size */
    selection-background-color: #ff4c4c; /* Red Selection */
    selection-color: #1c1c1c; /* Dark Gray Selection Text */
}
